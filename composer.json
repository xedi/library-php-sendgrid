{
    "name": "xedi/sendgrid",
    "description": "SendGrid PHP Library",
    "type": "library",
    "require": {
        "php": "^7.1.3",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": ">=5",
        "symfony/http-foundation": "^4.3.8",
        "symfony/mime": "^4.3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "mockery/mockery": "^1.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Smith",
            "email": "chris@xedi.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Xedi\\SendGrid\\": "lib/"
        },
        "files": [
            "lib/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
        },
        "classmap": [
            "lib/",
            "tests/"
        ]
    }
}
